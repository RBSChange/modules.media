<?xml version="1.0"?>
<perspective>
	<models>
		<model name="modules_generic/rootfolder">
			<children>
				<child model="modules_media/media" />
				<child model="modules_media/securemedia" />
				<child model="modules_generic/folder" />
				<child model="modules_generic/systemfolder" />
			</children>
			<drops>
				<drop model="modules_media/media" action="move" />
				<drop model="modules_generic/folder" action="move" />
				<drop model="modules_generic/systemfolder" action="move" />
			</drops>
			<styles properties="actualtype" />
			<columns>
				<column name="title" label="Title" flex="2" />
				<column name="countreferences" label="Countreferences" flex="1" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="createFolder" />
				<contextaction name="openTreeNodeOrder" />
				<groupactions name="create_">
					<contextaction name="createMedia" />
					<contextaction name="createSecuremedia" />
				</groupactions>
			</contextactions>
		</model>
		<model name="modules_generic/systemfolder">
			<children>
				<child model="modules_media/media" />
				<child model="modules_media/securemedia" />
				<child model="modules_generic/folder" />
			</children>
			<styles properties="actualtype" />
			<columns>
				<column name="title" label="Title" flex="2" />
				<column name="countreferences" label="Countreferences" flex="1" />
			</columns>
			<contextactions>
				<contextaction name="openFolder" />
			</contextactions>
		</model>
		<model name="modules_generic/folder">
			<children>
				<child model="modules_media/media" />
				<child model="modules_media/securemedia" />
				<child model="modules_generic/folder" />
			</children>
			<styles properties="actualtype" />
			<columns>
				<column name="title" label="Title" flex="2" />
				<column name="countreferences" label="Countreferences" flex="1" />
			</columns>
			<drops>
				<drop model="modules_media/media" action="move" />
				<drop model="modules_generic/folder" action="move" />
			</drops>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="createFolder" />
				<contextaction name="openTreeNodeOrder" />
				<groupactions name="create_">
					<contextaction name="createMedia" />
					<contextaction name="createSecuremedia" />
				</groupactions>
				<contextaction name="openFolder" />
			</contextactions>
		</model>
		<model name="modules_media/media">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="activate" />
				<contextaction name="deactivated" />
				<contextaction name="reactivate" />
				<contextaction name="openUrlRewritingPanel" />
				<contextaction name="downloadMedia" />
				<contextaction name="transformToSecureMedia" />
				<contextaction name="cropImage" />
			</contextactions>
		</model>
		<model name="modules_media/securemedia">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="downloadMedia" />
				<contextaction name="transformToMedia" />
				<contextaction name="cropImage" />
			</contextactions>
		</model>
	</models>
	<toolbar>
		<toolbarbutton name="edit" />
		<toolbarbutton name="delete" />
		<toolbarbutton name="downloadMedia" />
		<toolbarbutton name="cropImage" />
	</toolbar>
	<actions>
		<action name="refresh" single="true" icon="refresh" label="&amp;modules.uixul.bo.actions.Refresh;" />
		<action name="delete" permission="Delete" icon="delete" label="&amp;modules.uixul.bo.actions.Delete;" />
		<action name="edit" single="true" permission="Load" icon="edit" label="&amp;modules.uixul.bo.actions.Edit;" />
		<action name="openUrlRewritingPanel" single="true" icon="urlrewriting" label="&amp;modules.uixul.bo.actions.Url-rewriting;" />
		<action name="downloadMedia" single="true" permission="DownloadMedia" icon="download" label="&amp;modules.media.bo.actions.DownloadMedia;" />
		<action name="transformToSecureMedia" permission="Transform" icon="lock" label="&amp;modules.media.bo.actions.TransformToSecureMedia;" />
		<action name="cropImage" permission="CropDialog" single="true" icon="crop-image" label="&amp;modules.media.bo.actions.CropImage;" />
		<action name="transformToMedia" permission="Transform" icon="unlock" label="&amp;modules.media.bo.actions.TransformToMedia;" />
		<action name="openTreeNodeOrder" single="true" permission="Order" icon="sort" label="&amp;modules.uixul.bo.actions.Set-children-order;" />
		<action name="create_" actions="createMedia,createSecuremedia" icon="add" />
		<action name="createMedia" permission="Insert_media" group="create_" icon="add" label="&amp;modules.media.bo.actions.CreateMedia;" />
		<action name="createSecuremedia" permission="Insert_securemedia" group="create_" label="&amp;modules.media.bo.actions.Create-Securemedia;" />
		<action name="createFolder" single="true" permission="Insert_folder" icon="create-folder" label="&amp;modules.uixul.bo.actions.Create-folder;" />
		<action name="openFolder" icon="open-folder" label="&amp;modules.uixul.bo.actions.OpenFolder;" />
		<action name="deactivated" permission="Deactivated" icon="deactivated" label="&amp;modules.uixul.bo.actions.Deactivate;" />
		<action name="reactivate" permission="ReActivate" icon="reactivate" label="&amp;modules.uixul.bo.actions.ReActivate;" />
		<action name="activate" permission="Activate" icon="activate" label="&amp;modules.uixul.bo.actions.Activate;" />
	</actions>
</perspective>